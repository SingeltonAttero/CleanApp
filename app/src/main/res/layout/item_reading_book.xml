<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    app:barrierAllowsGoneWidgets="true"
    app:barrierDirection="bottom"
    android:layout_margin="8dp"
    android:elevation="8dp"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/title_reading_book"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="8dp"
            android:gravity="center|start"
            android:textColor="#6f8143"
            android:textSize="20sp"
            app:layout_constraintEnd_toStartOf="@+id/icon_reading_book"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/icon_reading_book"
            tool:text="title" />

        <TextView
            android:id="@+id/description_reading_book"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center|start|top"
            android:padding="4dp"
            android:textColor="#991f1f"
            android:elevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/icon_reading_book"
            app:layout_constraintStart_toStartOf="@+id/title_reading_book"
            app:layout_constraintTop_toBottomOf="@+id/title_reading_book"
            tool:text="description text" />

        <ImageView
            android:id="@+id/icon_reading_book"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="8dp"
            android:contentDescription="@string/stub"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tool:srcCompat="@drawable/book_reading_stub" />

    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>